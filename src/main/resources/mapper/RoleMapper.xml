<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leaf.xadmin.mapper.primary.RoleMapper">
    <sql id="ROLE_COLS">
        r.id, r.name, r.desc, r.create_time, r.update_time
    </sql>

    <delete id="deleteAdminRoleDeps">
      DELETE FROM admin_role
      WHERE role_id = #{id}
    </delete>

    <delete id="deleteUserRoleDeps">
        DELETE FROM user_role
        WHERE role_id = #{id}
    </delete>

    <delete id="deleteResourceRoleDeps">
        DELETE FROM resource_role
        WHERE role_id = #{id}
    </delete>

    <delete id="deletePermRoleDeps">
      DELETE FROM role_permission
      WHERE role_id = #{id}
    </delete>

    <select id="selectUserRoles" resultType="com.leaf.xadmin.entity.Role">
        SELECT <include refid="ROLE_COLS" />
        FROM user u
        RIGHT JOIN user_role ur ON u.id = ur.user_id
        LEFT JOIN role r ON ur.role_id = r.id
        WHERE u.name = #{name}
    </select>


    <select id="selectAdminRoles" resultType="com.leaf.xadmin.entity.Role">
        SELECT <include refid="ROLE_COLS" />
        FROM admin a
        RIGHT JOIN admin_role ar ON a.id = ar.admin_id
        LEFT JOIN role r ON ar.role_id = r.id
        WHERE a.name = #{name}
    </select>

</mapper>